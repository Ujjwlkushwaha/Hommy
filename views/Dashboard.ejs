<% layout('./layouts/boilerplate') -%>

<div>
    <div class="flex h-screen bg-gray-50">
        <!-- Sidebar -->
        <aside class="hidden md:flex md:flex-shrink-0">
            <div class="flex flex-col w-64 bg-white border-r border-gray-200">
                <!-- Profile Section -->
                <div class="flex flex-col items-center p-6 border-b">
                    <img class="w-20 h-20 rounded-full object-cover" 
                         src="https://cdn.usegalileo.ai/stability/4a2e858c-9183-47d4-bbb8-edc234bc273c.png" 
                         alt="Profile">
                    <h2 class="mt-4 font-semibold text-gray-800"><%=user.username%></h2>
                    <span class="px-3 py-1 mt-2 text-sm text-purple-700 bg-purple-100 rounded-full">Superhost</span>
                </div>
    
                <!-- Navigation -->
                <nav class="flex-1 p-4 space-y-2">
                    <a href="/dashboard" class="flex items-center px-4 py-3 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">
                        <i class="fas fa-chart-line w-5 h-5"></i>
                        <span class="ml-3">Overview</span>
                    </a>
                    <a href="/listings" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-home w-5 h-5"></i>
                        <span class="ml-3">Properties</span>
                    </a>
                    <a href="/reservations" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-calendar-check w-5 h-5"></i>
                        <span class="ml-3">Bookings</span>
                    </a>
                    <a href="/inbox" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-inbox w-5 h-5"></i>
                        <span class="ml-3">Messages</span>
                    </a>
                    <a href="/earnings" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-wallet w-5 h-5"></i>
                        <span class="ml-3">Earnings</span>
                    </a>
                    <a href="/reviews" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-star w-5 h-5"></i>
                        <span class="ml-3">Reviews</span>
                    </a>
                </nav>
    
                <!-- Support Section -->
                <div class="p-4 border-t">
                    <a href="/support" class="flex items-center px-4 py-3 text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-headset w-5 h-5"></i>
                        <span class="ml-3">Support</span>
                    </a>
                </div>
            </div>
        </aside>
    
        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Header -->
            <header class="bg-white shadow">
                <div class="px-6 py-4 flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-semibold text-gray-800">Welcome back</h1>
                        <p class="text-sm text-gray-600"><%=user.email%></p>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        <!-- Search -->
                        <div class="relative">
                            <input type="text" 
                                   placeholder="Search..." 
                                   class="w-64 pl-10 pr-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>
    
                        <!-- Notifications -->
                        <button class="relative p-2 text-gray-600 hover:bg-gray-100 rounded-full">
                            <i class="fas fa-bell"></i>
                            <span class="absolute top-0 right-0 h-5 w-5 bg-red-500 text-white text-xs rounded-full flex items-center justify-center">3</span>
                        </button>
    
                        <!-- New Property Button -->
                        <button class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 flex items-center">
                            <i class="fas fa-plus mr-2"></i>
                            <a href="/listings/new">Add Property</a>
                        </button>
                    </div>
                </div>
            </header>
    
            <!-- Main Content Area -->
            <main class="flex-1 overflow-y-auto p-6">
                <!-- Stats Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                    <!-- Active Bookings -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                                <i class="fas fa-calendar-check text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-gray-500 text-sm">Active Bookings</h3>
                                <p class="text-2xl font-semibold text-gray-800">12</p>
                                <span class="text-green-500 text-sm">+2.5% from last month</span>
                            </div>
                        </div>
                    </div>
    
                    <!-- Monthly Earnings -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="p-3 rounded-full bg-green-100 text-green-600">
                                <i class="fas fa-dollar-sign text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-gray-500 text-sm">Monthly Earnings</h3>
                                <p class="text-2xl font-semibold text-gray-800">$8,245</p>
                                <span class="text-green-500 text-sm">+12% from last month</span>
                            </div>
                        </div>
                    </div>
    
                    <!-- Average Rating -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                                <i class="fas fa-star text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-gray-500 text-sm">Average Rating</h3>
                                <p class="text-2xl font-semibold text-gray-800">4.8</p>
                                <span class="text-gray-500 text-sm">Same as last month</span>
                            </div>
                        </div>
                    </div>
    
                    <!-- Occupancy Rate -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center">
                            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                                <i class="fas fa-bed text-xl"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-gray-500 text-sm">Occupancy Rate</h3>
                                <p class="text-2xl font-semibold text-gray-800">85%</p>
                                <span class="text-green-500 text-sm">+5% from last month</span>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- Recent Activity Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Upcoming Bookings -->
                    <div class="bg-white rounded-lg shadow">
                        <div class="p-6 border-b border-gray-200">
                            <div class="flex justify-between items-center">
                                <h2 class="text-lg font-semibold text-gray-800">Upcoming Bookings</h2>
                                <a href="/reservations" class="text-purple-600 hover:text-purple-700 text-sm">View All</a>
                            </div>
                        </div>
                        <div class="p-6">
                            <!-- Add booking items here -->
                            <p class="text-gray-500">No upcoming bookings</p>
                        </div>
                    </div>
    
                    <!-- Recent Reviews -->
                    <div class="bg-white rounded-lg shadow">
                        <div class="p-6 border-b border-gray-200">
                            <div class="flex justify-between items-center">
                                <h2 class="text-lg font-semibold text-gray-800">Recent Reviews</h2>
                                <a href="/reviews" class="text-purple-600 hover:text-purple-700 text-sm">View All</a>
                            </div>
                        </div>
                        <div class="p-6">
                            <!-- Add review items here -->
                            <p class="text-gray-500">No recent reviews</p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://kit.fontawesome.com/your-code.js"></script>
    <!-- <script src="/js/dashboard.js"></script> -->
</div>